COMMLIB_DIR = $(SDIR)/libs/comm

COMMLIB    = libcom$(QIDLEXT)$(LIBEXT)

COMMLIB_SRC   = commlib$(QIDLEXT).c \
                commd_io$(QIDLEXT).c \
                commlib_last_heard$(QIDLEXT).c \
                commlib_util$(QIDLEXT).c

COMMLIB_OBJS = $(COMMLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
commlib: $(COMMLIB)
	
commlib_clean:
	rm -f libcom.a libcom$(SHAREDEXT) $(COMMLIB_OBJS)

commlib_depend:
	$(DEPEND) -f$(COMMLIB_DIR)/comm_dependencies $(COMMLIB_DIR)/*.c

commlib_messages:
	@echo Creating $@
	@for i in `ls $(COMMLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libcom.a: $(COMMLIB_OBJS)
	$(AR) $(ARFLAGS) libcom.a $(COMMLIB_OBJS)
	$(RANLIB) libcom.a

libcom$(SHAREDEXT): $(COMMLIB_OBJS) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libcom$(SHAREDEXT) $(COMMLIB_OBJS) -luti -lrmon $(LIBS) -lc
###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(COMMLIB_DIR)/comm_dependencies

###############################################################################
# rules to build object codes
###############################################################################
commd_io$(QIDLEXT).o:	$(COMMLIB_DIR)/commd_io.c
	$(CC) -o $@ $(CFLAGS) $(SHARED_CFLAGS) -DNO_COD_COMPILE_DEBUG -c $(COMMLIB_DIR)/commd_io.c

commlib$(QIDLEXT).o:	$(COMMLIB_DIR)/commlib.c
	$(CC) -o $@ $(CFLAGS) $(SHARED_CFLAGS) -c $(COMMLIB_DIR)/commlib.c

commlib_last_heard$(QIDLEXT).o:	$(COMMLIB_DIR)/commlib_last_heard.c
	$(CC) -o $@ $(CFLAGS) $(SHARED_CFLAGS) -c $(COMMLIB_DIR)/commlib_last_heard.c

commlib_util$(QIDLEXT).o:	$(COMMLIB_DIR)/commlib_util.c
	$(CC) -o $@ $(CFLAGS) $(SHARED_CFLAGS) -c $(COMMLIB_DIR)/commlib_util.c

