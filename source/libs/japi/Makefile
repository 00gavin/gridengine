SHELL = /bin/sh
RM    = rm -f
STRIP = strip
DEPEND = ../3rdparty/sge_depend/$(COMPILE_ARCH)/sge_depend -l -S -Y $(DEPEND_FLAGS)

JAPILIB_DIR   = $(SDIR)/libs/japi

JAPILIB 	     = libjapi$(LIBEXT)
JAPILIB_SRC   = japi.c sge_mtutil.c
JAPILIB_OBJS  = $(JAPILIB_SRC:.c=.o)

DRMAALIB 	  = libdrmaa$(LIBEXT)
DRMAALIB_SRC  = drmaa.c 
DRMAALIB_OBJS = $(DRMAALIB_SRC:.c=.o)

JAPI_ALL 	  = test_drmaa japilib drmaalib 

JAPI_DEPEND_OBJS = $(EVCLIB_OBJS) $(GDILIB_OBJS) $(SECLIB_OBJS) $(SGEOBJLIB_OBJS) $(SGEOBJDLIB_OBJS) $(COMMLIB_OBJS) $(CULLLIB_OBJS) $(UTILIB_OBJS) $(RMONLIB_OBJS)
DRMAA_DEPEND_OBJS = $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS)

all: $(JAPI_ALL)

include $(SDIR)/common/Makefile   
include $(SDIR)/libs/comm/Makefile
include $(SDIR)/libs/cull/Makefile
include $(SDIR)/libs/gdi/Makefile
include $(SDIR)/security/sec/Makefile
include $(SDIR)/libs/rmon/Makefile
include $(SDIR)/libs/uti/Makefile
include $(SDIR)/libs/evc/Makefile
include $(SDIR)/libs/sgeobj/Makefile

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
japilib: $(JAPILIB)
drmaalib: $(DRMAALIB)
	
clean: 
	$(RM) $(JAPI_ALL) $(JAPILIB_OBJS) $(DRMAA_DEPEND_OBJS) libjapi.a libjapi$(SHAREDEXT) $(DRMAALIB_OBJS) libdrmaa.a libdrmaa$(SHAREDEXT) test_drmaa.o test_drmaa example.o example sge_sub_object.c

depend:
	$(DEPEND) -f$(JAPILIB_DIR)/japi_dependencies $(JAPILIB_DIR)/*.c

messages:
	@echo Creating $@
	@for i in `ls $(JAPILIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libjapi.a:  $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS)
	$(AR) $(ARFLAGS) libjapi.a $(JAPILIB_OBJS) $(JAPI_DEPEND_OBJS)
	$(RANLIB) libjapi.a 

libdrmaa.a:  $(DRMAALIB_OBJS) $(DRMAA_DEPEND_OBJS)
	$(AR) $(ARFLAGS) libdrmaa.a $(DRMAALIB_OBJS) $(DRMAA_DEPEND_OBJS) 
	$(RANLIB) libdrmaa.a 

# libdrmaa$(SHAREDEXT): $(DRMAALIB_OBJS) $(DRMAA_DEPEND_OBJS)
# 	$(SHAREDLD) $(SHARED_LFLAGS) -o libdrmaa$(SHAREDEXT) $(DRMAALIB_OBJS) $(DRMAA_DEPEND_OBJS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(JAPILIB_DIR)/japi_dependencies

###############################################################################
# rules to build object codes
###############################################################################
drmaa.o: $(JAPILIB_DIR)/drmaa.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/drmaa.c

japi.o: $(JAPILIB_DIR)/japi.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/japi.c

sge_mtutil.o: $(JAPILIB_DIR)/sge_mtutil.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/sge_mtutil.c


#---------------------------------------------------------------------

TEST_JAPI_OBJS = test_drmaa.o $(DRMAALIB)

test_drmaa: $(TEST_JAPI_OBJS)
	$(LD_WRAPPER) $(CC) $(CFLAGS) -o test_drmaa $(TEST_JAPI_OBJS) $(LFLAGS) $(LIBS) $(SLIBS)

test_drmaa.o: $(JAPILIB_DIR)/test_drmaa.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/test_drmaa.c

example: example.o $(DRMAALIB)
	$(LD_WRAPPER) $(CC) $(CFLAGS) -o example example.o $(DRMAALIB) $(LFLAGS) $(LIBS) $(SLIBS)

example.o: $(JAPILIB_DIR)/example.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/example.c

