JAPILIB_DIR   = $(SDIR)/libs/japi

JAPILIB 	= libjapi$(LIBEXT)

JAPILIB_SRC 	= japi.c rdwr.c sge_all_listsL.c

JAPILIB_OBJS = $(JAPILIB_SRC:.c=.o)

JAPI_ALL 	= japilib test_japi 

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
japilib: $(JAPILIB)

japilib_all: $(JAPI_ALL)
	
japilib_clean: 
	$(RM) $(JAPI_ALL) $(JAPILIB_OBJS) libjapi.a libjapi$(SHAREDEXT) test_japi.o test_japi

japilib_depend:
	$(DEPEND) -f$(JAPILIB_DIR)/japi_dependencies $(JAPILIB_DIR)/*.c

japi_messages:
	@echo Creating $@
	@for i in `ls $(JAPILIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libjapi.a:  $(JAPILIB_OBJS)
	$(AR) $(ARFLAGS) libjapi.a $(JAPILIB_OBJS)
	$(RANLIB) libjapi.a 

libjapi$(SHAREDEXT): $(JAPILIB_OBJS) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libjapi$(SHAREDEXT) $(JAPILIB_OBJS) -l gdi -lcom -luti -lrmon $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(JAPILIB_DIR)/japi_dependencies

###############################################################################
# rules to build object codes
###############################################################################
japi.o: $(JAPILIB_DIR)/japi.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/japi.c

rdwr.o: $(JAPILIB_DIR)/rdwr.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(JAPILIB_DIR)/rdwr.c

#---------------------------------------------------------------------

TEST_JAPI_OBJS = test_japi.o $(JAPILIB) $(EVCLIB) $(GDILIB) $(SGEOBJLIB) $(SGEOBJDLIB) $(COMMLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)

test_japi: $(TEST_JAPI_OBJS)
	$(CC) $(CFLAGS) -o test_japi $(TEST_JAPI_OBJS) $(LFLAGS) $(LIBS)

test_japi.o: $(JAPILIB_DIR)/test_japi.c
	$(CC) $(CFLAGS) -c $(JAPILIB_DIR)/test_japi.c

