SPOOLLIB_DIR = $(SDIR)/libs/spool

SPOOLLIB = libspool$(QIDLEXT)$(LIBEXT)

SPOOLLIB_SRC = \
         complex_history.c \
         sge_spooling.c \
         sge_spooling_classic.c \
         opt_history.c \
         read_write_sharetree.c \
         read_write_complex.c \
         read_list.c \
         read_object.c \
         read_write_cal.c \
         read_write_ckpt.c \
         read_write_host.c \
         read_write_host_group.c \
         read_write_job.c \
         read_write_manop.c \
         read_write_pe.c \
         read_write_queue.c \
         read_write_ume.c \
         read_write_userprj.c \
         read_write_userset.c \
         rw_configuration.c \
         sched_conf.c
         

SPOOLLIB_OBJS = $(SPOOLLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
spoollib: $(SPOOLLIB)

spoollib_clean:
		$(RM) $(SPOOLLIB_OBJS) libspool.a libspool$(SHAREDEXT)

spoollib_depend:
		$(DEPEND) -f$(SPOOLLIB_DIR)/spool_dependencies $(SPOOLLIB_DIR)/*.c

spoollib_messages:
	@echo Creating $@
	@for i in `ls $(SPOOLLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libspool.a:	$(SPOOLLIB_OBJS) 
	$(AR) $(ARFLAGS) libspool.a $(SPOOLLIB_OBJS)
	$(RANLIB) libspool.a

libspool$(SHAREDEXT): $(SPOOLLIB_OBJS) $(GDILIB) $(COMMLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libspool$(SHAREDEXT) $(SPOOLLIB_OBJS) -lgdi -lcom -lcull -luti -lrmon $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(SPOOLLIB_DIR)/spool_dependencies

###############################################################################
# rules to build object codes
###############################################################################
complex_history.o:	$(SPOOLLIB_DIR)/complex_history.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/complex_history.c
   
sge_spooling.o: $(SPOOLLIB_DIR)/sge_spooling.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLLIB_DIR)/sge_spooling.c

sge_spooling_classic.o: $(SPOOLLIB_DIR)/sge_spooling_classic.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(SPOOLLIB_DIR)/sge_spooling_classic.c

opt_history.o: 	$(SPOOLLIB_DIR)/opt_history.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/opt_history.c

read_write_sharetree.o: $(SPOOLLIB_DIR)/read_write_sharetree.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_sharetree.c

read_write_complex.o: $(SPOOLLIB_DIR)/read_write_complex.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_complex.c

read_object.o:   $(SPOOLLIB_DIR)/read_object.c
		$(CC) $(CFLAGS) $(MEMCFLAG) -c $(SPOOLLIB_DIR)/read_object.c

read_write_cal.o:	$(SPOOLLIB_DIR)/read_write_cal.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_cal.c

read_write_ckpt.o:	$(SPOOLLIB_DIR)/read_write_ckpt.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_ckpt.c

read_write_host.o   : $(SPOOLLIB_DIR)/read_write_host.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_host.c

read_write_host_group.o:	$(SPOOLLIB_DIR)/read_write_host_group.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_host_group.c

read_write_job.o:	$(SPOOLLIB_DIR)/read_write_job.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_job.c

read_write_manop.o:	$(SPOOLLIB_DIR)/read_write_manop.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_manop.c

read_write_pe.o:	$(SPOOLLIB_DIR)/read_write_pe.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_pe.c

read_write_queue.o:	$(SPOOLLIB_DIR)/read_write_queue.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_queue.c

read_write_ume.o:	$(SPOOLLIB_DIR)/read_write_ume.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_ume.c

read_write_userprj.o:	$(SPOOLLIB_DIR)/read_write_userprj.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_userprj.c

read_write_userset.o:	$(SPOOLLIB_DIR)/read_write_userset.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_write_userset.c

rw_configuration.o:  $(SPOOLLIB_DIR)/rw_configuration.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/rw_configuration.c

sched_conf.o   : $(SPOOLLIB_DIR)/sched_conf.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/sched_conf.c

read_list.o   : $(SPOOLLIB_DIR)/read_list.c
		$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/read_list.c

#---------------------------------------------------------------------
# test programs
test_sge_spooling: test_sge_spooling.o sig_handlers.o $(SPOOLLIB) $(GDILIB) $(SCHEDLIB) $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB)
	$(CC) $(CFLAGS) -o test_sge_spooling $(LFLAGS) test_sge_spooling.o sig_handlers.o $(SPOOLLIB) $(SCHEDLIB) $(GDILIB) $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB) $(LIBS)

test_sge_spooling.o: $(SPOOLLIB_DIR)/test_sge_spooling.c
	$(CC) $(CFLAGS) -c $(SPOOLLIB_DIR)/test_sge_spooling.c

