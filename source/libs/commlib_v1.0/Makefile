##########################################################################
SHELL = /bin/sh
RM    = rm -f 
STRIP = strip
DEPEND = $(SOURCE)/3rdparty/sge_depend/$(COMPILE_ARCH)/sge_depend -l -S -Y $(CFLAGS)
##########################################################################

NGCLIB = libngc$(LIBEXT)
NGCLIB_DIR = $(SOURCE)/libs/commlib_v1.0
NGCLIB_SRC = \
         cl_tcp_framework.c \
         cl_communication.c \
         cl_connection_list.c \
         cl_message_list.c \
         cl_host_list.c \
         cl_host_alias_list.c \
         cl_handle_list.c \
         cl_commlib.c

NGCLIB_OBJS = $(NGCLIB_SRC:.c=.o)

NGCLIB_TEST_SRC = \
         test_cl_tcp_framework.c \
         test_cl_commlib.c \
         test_cl_commlib_client.c \
         test_cl_hostname_list.c  \
         test_cl_hostalias_list.c \
         test_multithread_io.c  \
         test_status_info.c

NGCLIB_TEST_OBJS = $(NGCLIB_TEST_SRC:.c=.o)

###############################################################################
include $(SOURCE)/libs/commlib_v1.0/lists/Makefile

###############################################################################
COMMLIB = $(NGCLIB) $(NGCLISTSLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
all: test_cl_tcp_framework test_cl_commlib test_cl_commlib_client \
     test_cl_hostname_list test_cl_hostalias_list test_multithread_io test_status_info \
     ngclib ngclists_all

depend: ngclib_depend ngclistslib_depend

messages: ngclib_messages

clean: ngclib_clean

ngclib: $(NGCLIB) $(NGCLISTSLIB)

ngclib_clean: ngclistslib_clean
		$(RM) $(NGCLIB_OBJS) $(NGCLIB_TEST_OBJS) libngc.a libngc$(SHAREDEXT) \
      test_cl_tcp_framework test_cl_commlib_client test_cl_commlib test_cl_hostname_list \
      test_cl_hostalias_list test_multithread_io test_status_info

ngclib_depend: ngclistslib_depend
		$(DEPEND) -f$(NGCLIB_DIR)/ngclib_dependencies $(NGCLIB_DIR)/*.c

ngclib_messages: ngclistslib_messages
	@echo Creating $@
	@for i in `ls $(NGCLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libngc.a:	$(NGCLIB_OBJS) 
	$(AR) $(ARFLAGS) libngc.a $(NGCLIB_OBJS)
	$(RANLIB) libngc.a

libngc$(SHAREDEXT): $(NGCLIB_OBJS) $(SGEOBJLIB) $(SGEOBJDLIB) $(COMMLIB) $(CULLLIB) $(UTILIB) $(RMONLIB)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libngc$(SHAREDEXT) $(NGCLIB_OBJS) $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(NGCLIB_DIR)/ngclib_dependencies

###############################################################################
# rules to build object codes
###############################################################################
cl_tcp_framework.o: $(NGCLIB_DIR)/cl_tcp_framework.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_tcp_framework.c
cl_communication.o: $(NGCLIB_DIR)/cl_communication.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_communication.c
cl_connection_list.o: $(NGCLIB_DIR)/cl_connection_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_connection_list.c
cl_message_list.o: $(NGCLIB_DIR)/cl_message_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_message_list.c
cl_host_list.o: $(NGCLIB_DIR)/cl_host_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_host_list.c
cl_host_alias_list.o: $(NGCLIB_DIR)/cl_host_alias_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_host_alias_list.c
cl_handle_list.o: $(NGCLIB_DIR)/cl_handle_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_handle_list.c
cl_commlib.o: $(NGCLIB_DIR)/cl_commlib.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLIB_DIR)/cl_commlib.c







#---------------------------------------------------------------------
# test programs
test_cl_tcp_framework: test_cl_tcp_framework.o $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
	$(CC) -o test_cl_tcp_framework $(LFLAGS) test_cl_tcp_framework.o $(MTLFLAGS) $(LIBS) $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
test_cl_commlib: test_cl_commlib.o $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
	$(CC) -o test_cl_commlib $(LFLAGS) test_cl_commlib.o $(MTLFLAGS) $(LIBS) $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
test_cl_commlib_client: test_cl_commlib_client.o $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB)  $(RMONLIB)
	$(CC) -o test_cl_commlib_client $(LFLAGS) test_cl_commlib_client.o $(MTLFLAGS) $(LIBS) $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
test_cl_hostname_list: test_cl_hostname_list.o $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB)  $(RMONLIB)
	$(CC) -o test_cl_hostname_list $(LFLAGS) test_cl_hostname_list.o $(MTLFLAGS) $(LIBS) $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
test_cl_hostalias_list: test_cl_hostalias_list.o $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
	$(CC) -o test_cl_hostalias_list $(LFLAGS) test_cl_hostalias_list.o $(MTLFLAGS) $(LIBS) $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
test_multithread_io: test_multithread_io.o $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
	$(CC) -o test_multithread_io $(LFLAGS) test_multithread_io.o $(MTLFLAGS) $(LIBS) $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
test_status_info: test_status_info.o $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)
	$(CC) -o test_status_info $(LFLAGS) test_status_info.o $(MTLFLAGS) $(LIBS) $(NGCLIB) $(NGCLISTSLIB) $(UTILIB) $(LCKLIB) $(RMONLIB)






test_cl_tcp_framework.o: $(NGCLIB_DIR)/test_cl_tcp_framework.c
	$(CC) $(CFLAGS) -c $(NGCLIB_DIR)/test_cl_tcp_framework.c
test_cl_commlib.o: $(NGCLIB_DIR)/test_cl_commlib.c
	$(CC) $(CFLAGS) -c $(NGCLIB_DIR)/test_cl_commlib.c
test_cl_commlib_client.o: $(NGCLIB_DIR)/test_cl_commlib_client.c
	$(CC) $(CFLAGS) -c $(NGCLIB_DIR)/test_cl_commlib_client.c
test_cl_hostname_list.o: $(NGCLIB_DIR)/test_cl_hostname_list.c
	$(CC) $(CFLAGS) -c $(NGCLIB_DIR)/test_cl_hostname_list.c
test_cl_hostalias_list.o: $(NGCLIB_DIR)/test_cl_hostalias_list.c
	$(CC) $(CFLAGS) -c $(NGCLIB_DIR)/test_cl_hostalias_list.c
test_multithread_io.o: $(NGCLIB_DIR)/test_multithread_io.c
	$(CC) $(CFLAGS) -c $(NGCLIB_DIR)/test_multithread_io.c
test_status_info.o: $(NGCLIB_DIR)/test_status_info.c
	$(CC) $(CFLAGS) -c $(NGCLIB_DIR)/test_status_info.c






 
