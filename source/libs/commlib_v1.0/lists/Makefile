NGCLISTSLIB_DIR = $(SOURCE)/libs/commlib_v1.0/lists

NGCLISTSLIB = libngclists$(LIBEXT)

NGCLISTSLIB_SRC =           \
         cl_util.c          \
         cl_errors.c        \
         cl_raw_list.c      \
         cl_log_list.c      \
         cl_string_list.c   \
         cl_thread.c        \
         cl_thread_list.c   
         
         
NGCLISTSLIB_TEST_SRC = \
         test_cl_raw_list.c    \
         test_cl_util.c        \
         test_cl_errors.c      \
         test_cl_log_list.c    \
         test_cl_thread.c      \
         test_cl_thread_list.c 


NGCLISTSLIB_OBJS = $(NGCLISTSLIB_SRC:.c=.o)


NGCLISTSLIB_TEST_OBJS = $(NGCLISTSLIB_TEST_SRC:.c=.o)
###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
ngclists_all: ngclistslib test_cl_raw_list test_cl_util test_cl_errors test_cl_log_list test_cl_thread test_cl_thread_list

ngclistslib: $(NGCLISTSLIB)

ngclistslib_clean:
		$(RM) $(NGCLISTSLIB_OBJS) $(NGCLISTSLIB_TEST_OBJS) libngclists.a libngclists$(SHAREDEXT) test_cl_raw_list test_cl_util test_cl_errors test_cl_log_list test_cl_thread test_cl_thread_list

ngclistslib_depend:
		$(DEPEND) -f $(NGCLISTSLIB_DIR)/ngclistslib_dependencies $(NGCLISTSLIB_DIR)/*.c

ngclistslib_messages:
	@echo Creating $@
	@for i in `ls $(NGCLISTSLIB_DIR)/*.c`; do \
	   $(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ;\
	done

###############################################################################
# rules to build library
###############################################################################
libngclists.a:	$(NGCLISTSLIB_OBJS) 
	$(AR) $(ARFLAGS) libngclists.a $(NGCLISTSLIB_OBJS)
	$(RANLIB) libngclistslib.a

libngclistslib$(SHAREDEXT): $(NGCLISTSLIB_OBJS)
	$(SHAREDLD) $(SHARED_LFLAGS) -o libngclistslib$(SHAREDEXT) $(NGCLISTSLIB_OBJS) $(LIBS) -lc

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(NGCLISTSLIB_DIR)/ngclistslib_dependencies

###############################################################################
# rules to build object codes
###############################################################################
cl_raw_list.o: $(NGCLISTSLIB_DIR)/cl_raw_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLISTSLIB_DIR)/cl_raw_list.c
cl_util.o: $(NGCLISTSLIB_DIR)/cl_util.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLISTSLIB_DIR)/cl_util.c
cl_errors.o: $(NGCLISTSLIB_DIR)/cl_errors.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLISTSLIB_DIR)/cl_errors.c
cl_log_list.o: $(NGCLISTSLIB_DIR)/cl_log_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLISTSLIB_DIR)/cl_log_list.c
cl_string_list.o: $(NGCLISTSLIB_DIR)/cl_string_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLISTSLIB_DIR)/cl_string_list.c
cl_thread.o: $(NGCLISTSLIB_DIR)/cl_thread.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLISTSLIB_DIR)/cl_thread.c
cl_thread_list.o: $(NGCLISTSLIB_DIR)/cl_thread_list.c 
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(NGCLISTSLIB_DIR)/cl_thread_list.c




test_cl_raw_list: test_cl_raw_list.o $(NGCLISTSLIB)
	$(CC) -o test_cl_raw_list $(LFLAGS) test_cl_raw_list.o $(MTLFLAGS) $(NGCLISTSLIB)
test_cl_util: test_cl_util.o $(NGCLISTSLIB)
	$(CC) -o test_cl_util $(LFLAGS) test_cl_util.o $(MTLFLAGS) $(NGCLISTSLIB)
test_cl_errors: test_cl_errors.o $(NGCLISTSLIB)
	$(CC) -o test_cl_errors $(LFLAGS) test_cl_errors.o $(MTLFLAGS) $(NGCLISTSLIB)
test_cl_log_list: test_cl_log_list.o $(NGCLISTSLIB)
	$(CC) -o test_cl_log_list $(LFLAGS) test_cl_log_list.o $(MTLFLAGS) $(NGCLISTSLIB)
test_cl_thread: test_cl_thread.o $(NGCLISTSLIB)
	$(CC) -o test_cl_thread $(LFLAGS) test_cl_thread.o $(MTLFLAGS) $(NGCLISTSLIB)
test_cl_thread_list: test_cl_thread_list.o $(NGCLISTSLIB)
	$(CC) -o test_cl_thread_list $(LFLAGS) test_cl_thread_list.o $(MTLFLAGS) $(NGCLISTSLIB)




test_cl_raw_list.o: $(NGCLISTSLIB_DIR)/test_cl_raw_list.c
	$(CC) $(CFLAGS) -c $(NGCLISTSLIB_DIR)/test_cl_raw_list.c
test_cl_util.o: $(NGCLISTSLIB_DIR)/test_cl_util.c
	$(CC) $(CFLAGS) -c $(NGCLISTSLIB_DIR)/test_cl_util.c
test_cl_errors.o: $(NGCLISTSLIB_DIR)/test_cl_errors.c
	$(CC) $(CFLAGS) -c $(NGCLISTSLIB_DIR)/test_cl_errors.c
test_cl_log_list.o: $(NGCLISTSLIB_DIR)/test_cl_log_list.c
	$(CC) $(CFLAGS) -c $(NGCLISTSLIB_DIR)/test_cl_log_list.c
test_cl_thread.o: $(NGCLISTSLIB_DIR)/test_cl_thread.c
	$(CC) $(CFLAGS) -c $(NGCLISTSLIB_DIR)/test_cl_thread.c
test_cl_thread_list.o: $(NGCLISTSLIB_DIR)/test_cl_thread_list.c
	$(CC) $(CFLAGS) -c $(NGCLISTSLIB_DIR)/test_cl_thread_list.c


 
