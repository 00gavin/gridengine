resolve_host.o: $(GDILIB_DIR)/resolve_host.c
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(GDILIB_DIR)/resolve_host.c

setup.o: 	$(GDILIB_DIR)/setup.c
