sge_parse_num_par.o: $(GDILIB_DIR)/sge_parse_num_par.c
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(GDILIB_DIR)/sge_parse_num_par.c

sge_parse_date_time.o   : $(GDILIB_DIR)/sge_parse_date_time.c
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(GDILIB_DIR)/sge_parse_date_time.c

parse.o: 	$(GDILIB_DIR)/parse.c
		$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(GDILIB_DIR)/parse.c

parse_mail.o : $(GDILIB_DIR)/parse_mail.c
