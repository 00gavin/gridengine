QCONF_DIR = $(SDIR)/clients/qconf

QCONF_TARGETS = qconf

QCONF_SRC = qconf.c \
            parse_qconf.c \
            sge_client_access.c

QCONF_ADD_SRC = \
               rw_configuration.c complex.c sge_userset.c \
               read_write_userprj.c read_write_pe.c read_write_queue.c \
               read_write_ckpt.c read_write_cal.c read_write_host.c \
               read_write_userset.c  sched_conf.c \
               sge_sharetree.c read_object.c sig_handlers.c \
               read_write_ume.c read_write_host_group.c sge_groups.c \
               usage.c sge_options.c

QCONF_OBJS = $(QCONF_SRC:.c=.o) 

QCONF_ADD_OBJS = $(QCONF_ADD_SRC:.c=.o)

QCONF_ADD_LIBS = -lsched -lgdi $(KRBLIBS) -lcull -lcom -luti -lrmon

QCONF_LIB_DEPENDS = $(SCHEDLIB) $(GDILIB) $(SECLIBS) $(KRBLIBS) $(CULLLIB) $(COMMLIB) $(UTILIB) $(RMONLIB) $(ZLIB)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
qconf_clean:
	$(RM) $(QCONF_TARGETS) $(QCONF_OBJS)

qconf_depend:
		$(DEPEND) -f$(QCONF_DIR)/qconf_dependencies $(QCONF_DIR)/*.c

qconf_messages:
	@echo Creating $@
	@for i in `ls $(QCONF_DIR)/*.c`; do \
		$(CC) $(CFLAGS) -DEXTRACT_MESSAGES -E $$i | $(XGETTEXT) - ; \
	done


###############################################################################
# rules to build binaries
###############################################################################
qconf: $(QCONF_OBJS) $(QCONF_ADD_OBJS) $(QCONF_LIB_DEPENDS)
		$(CC) -o $@ $(LFLAGS) $(QCONF_OBJS) $(QCONF_ADD_OBJS) $(QCONF_ADD_LIBS) $(LIBS)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(QCONF_DIR)/qconf_dependencies

###############################################################################
# rules to build object codes
###############################################################################
sge_client_access.o: $(QCONF_DIR)/sge_client_access.c
		$(CC) $(CFLAGS) -c $(QCONF_DIR)/sge_client_access.c

parse_qconf.o:	$(QCONF_DIR)/parse_qconf.c
		$(CC) $(CFLAGS) $(MEMCFLAG) -c $(QCONF_DIR)/parse_qconf.c

qconf.o: 	$(QCONF_DIR)/qconf.c
		$(CC) $(CFLAGS) -c $(QCONF_DIR)/qconf.c
