##########################################################################
#___INFO__MARK_END__

PATH=/bin:/usr/bin

# "$SGE_ROOT" and $SGE_CELL (if other than "default") must be set in current
# environment.
#

if [ "$SGE_ROOT" = "" ]; then
   echo environment variable \"\$SGE_ROOT\" not set. Exit.
   exit 1
fi

if [ "$SGE_ROOT" = "/" ]; then
   echo environment variable \"\$SGE_ROOT\" cannot be set to \"/\". Exit.
   exit 1
fi

if [ ! -f "$SGE_ROOT/util/arch" ]; then
   echo
   echo ERROR: The shell script \"$SGE_ROOT/util/arch\" does not exist.
   echo Please verify your distribution and restart this script. Exit.
   echo
   exit 1
fi
 
if [ ! -f $SGE_ROOT/util/arch_variables ]; then
   echo
   echo ERROR: Missing shell script \"$SGE_ROOT/util/arch_variables\".
   echo Please verify your distribution and restart this script. Exit.
   echo
   exit 1
fi

. $SGE_ROOT/util/arch_variables


if [ $# -lt 2 -o "$1" = "-h" -o "$1" = "-help" ]; then
   echo 
   echo "Remotely execute commands via \"rsh\" or \"ssh\"."
   echo
   echo "usage: sgeremoterun [-noexec] [-ssh] [-all] [-noqmaster] \\"
   echo "                    [-f hostfile] [host1]... -- command"
   echo
   echo "   -noexec     do nothing, just print what would be done"
   echo "   -ssh        uses \"ssh\" instad of \"rsh\""
   echo "   -sshpath    path where ssh is installed of not in $PATH"
   echo "   -all        run command on all execution hosts found in qmaster spool dir."
   echo "   -f hostfile use this file which contains a list of hosts"
   echo "   -noqmaster do not run command on current qmaster host"
   echo
   exit 1
fi

if [ "$SGE_CELL" = "" ]; then
   SGE_CELL=default
   export SGE_CELL
fi

noexec=false
cmd=rsh
qmaster=true
CMD=""
hosts=""
done=false

whoseargs="args"
while [ "$1" != "" -a $done = false ]; do
   case "$1" in
   --)
      whoseargs="cmd" 
      ;;
   *)
      if [ "$whoseargs" = "args" ]; then
         case "$1" in
         -noexec)
            noexec=true
            ;;
         -ssh)
            cmd=ssh
            ;;
         -sshpath)
            PATH=$PATH:$2
            shift
            ;;
         -all)
            qma_spool_dir=`grep qmaster_spool_dir $SGE_ROOT/$SGE_CELL/common/configuration | \
                           awk '{ print $2 }'`
            hostlist=`ls $qma_spool_dir/exec_hosts|egrep -v "template|global"`
            hosts="$hosts $hostlist"
            ;;
         -noqmaster)
            qmaster=false
            ;;
         -f)
            if [ -f "$2" ]; then
               hostlist=`cat $2`
               hosts="$hosts $hostlist"
            else
               echo hostfile \"$2\" does not exist. Installation failed. Exit.
               exit 1
            fi
            shift
            ;;
         -*)
            echo "unknown option: $1"
            exit 1
            ;;
         *)
            hosts="$hosts $1"
            ;;
         esac
      else
         CMD=$*
         done=true
      fi
      ;;
   esac
   shift
done
     
if [ "$CMD" = "" ]; then
   echo No command to execute. Exit.
   exit 1
fi

if [ "$hosts" = "" ]; then
   echo No hosts given. Exit.
   exit 1
fi

hosts=`printf "%s\n" $hosts | sort | uniq`

act_qmaster=none
if [ $qmaster = false ]; then
   if [ -f $SGE_ROOT/default/common/act_qmaster ]; then
      act_qmaster=`cat $SGE_ROOT/default/common/act_qmaster`
   else
     echo "File $SGE_ROOT/default/common/act_qmaster does not exist. Exit."
     exit 1
   fi
fi

if [ $noexec = true ]; then
   echo
   echo The command:
   echo
   echo "  # echo \". $SGE_ROOT/$SGE_CELL/common/settings.sh; cd $SGE_ROOT && $CMD\" | $cmd <host> /bin/sh"
   echo 
   echo would be executed on the following hosts:
   echo
   printf "%s %s " "   " $hosts
   echo
   if [ $qmaster = false ]; then
      echo The command would not be executed on qmaster host:
      echo
      echo "   $act_qmaster"
      echo
   fi
   exit 0
fi

echo "Executing command in $SGE_ROOT: $CMD"

for h in $hosts; do
   echo Host: $h
   if [ $qmaster = false -a $h = "$act_qmaster" ]; then
      echo not executing command on qmaster host \"$act_qmaster\"
   else  
      echo ". $SGE_ROOT/$SGE_CELL/common/settings.sh; cd $SGE_ROOT && $CMD" | $cmd $h /bin/sh
   fi
   echo ==============================================================================
done
