# Variable definitions for targets to build

CLASSES_DIR   = $(SDIR)/classes/src

UTILLIB_NJ      =
UTILLIB_ALL     = libutil$(SHAREDEXT)
UTILLIB         = $(UTILLIB_$(JNI_TARGET))
UTILLIB_SRC     = com_sun_grid_util_SGEUtil.c
UTILLIB_OBJS    = $(UTILLIB_SRC:.c=.o)

###############################################################################
# global rules: all, clean, depend, messages
###############################################################################
classes_all: util

classes_clean: util_clean

classes_depend:
	$(DEPEND) -f$(CLASSES_DIR)/classes_dependencies $(CLASSES_DIR)/*.c

util: $(UTILLIB)

util_clean:
	$(RM) $(UTILLIB_OBJS) $(UTILLIB)

###############################################################################
# rules to build library
###############################################################################
$(UTILLIB): $(UTILLIB_OBJS)
	$(SHAREDLD) $(SHARED_LFLAGS) -o $(UTILLIB) $(UTILLIB_OBJS) $(LIBWINGRID) $(SLIBS) $(LIBS) -lc \
   && ../scripts/nonreentrant.sh -a `../dist/util/arch` -w $(UTILLIB)

###############################################################################
# include dependencies for object files generated by sge_depend
###############################################################################
include $(CLASSES_DIR)/classes_dependencies

###############################################################################
# rules to build object code
###############################################################################
com_sun_grid_util_SGEUtil.o: $(CLASSES_DIR)/com_sun_grid_util_SGEUtil.c
	$(CC) $(CFLAGS) $(SHARED_CFLAGS) -c $(CLASSES_DIR)/com_sun_grid_util_SGEUtil.c
